/* pages/classify/classify.wxss */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.page__bd {
  padding-bottom: 0;
}

.search {
  background-color: #fff;
}

.search .weui-search-bar__form, .search .weui-search-bar__label {
  background-color: #f8f8f8;
}

.classify .left {
  float: left;
  background-color: #fff;
  width: 28%;
  height: 1010rpx;
  color: #444;
  text-align: center;
  font-size: 26rpx;
  padding: 1px 10rpx 20rpx;
  box-sizing: border-box;
  border-right: 1px solid #ddd;
}

.classify .left .item {
  padding: 0 20rpx;
  margin-top: 40rpx;
  height: 50rpx;
  border-radius: 30rpx;
  line-height: 50rpx;
}

.classify .left .item.active {
  color: #fff;
  background-color: #77d646;
}

/*分类 -> 类别  */

.category {
  float: left;
  width: 72%;
  display: flex;
  justify-content: flex-start;
  background-color: #fff;
  flex-wrap: wrap;
}

.category .item {
  width: 33%;
  text-align: center;
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.category .item image {
  width: 100%;
  height: 180rpx;
}

/*搜索记录  */

.record {
  padding: 20rpx;
}

.record .title {
  position: relative;
  font-size: 30rpx;
  color: #444;
}

.record .title .del {
  position: absolute;
  right: 0;
  width: 50rpx;
  height: 50rpx;
}

.record .record-list {
  padding: 20rpx;
}

.record .record-list .item {
  display: inline-block;
  background: #eee;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #555;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

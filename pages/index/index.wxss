/**index.wxss**/

/*授权  */

.auth {
  width: 230rpx;
  height: 100rpx;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  background-color: #fff;
}

/*轮播  */

.container swiper {
  height: 400rpx;
  background-color: #fff;
}

.container .swiper image {
  width: 100%;
}

/*搜索  */

.search {
  background-color: #fff;
}

#classify {
  height: 40rpx;
  min-height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-left: 0;
  min-width: 100rpx;
  border-right: none;
}

/*图文面板  */

.container .block-list {
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 30rpx;
}

.container .block-list .item {
  width: 320rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.container .block-list .item .goods-img {
  width: 320rpx;
  height: 320rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.container .block-list .item .goods-title {
  padding: 10rpx 0 4rpx;
  font-size: 32rpx;
}

.choice .title {
  margin-top: 20rpx;
  background-color: #fff;
  line-height: 90rpx;
  font-size: 36rpx;
  text-align: center;
  font-weight: bold;
  color: #333;
}

.goods {
  margin-top: 0;
}

/*底部  */

.weui-footer {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

/* pages/goods/goods_detail.wxss */

page {
  border-top: 1px solid #eee;
}

/*轮播  */

.container swiper {
  height: 400rpx;
}

.container .swiper image {
  width: 100%;
}
.container .content{
  color: #444;
}

.container .content .name {
  background-color: #fff;
  padding: 20rpx;
  font-size: 36rpx;
  margin-top: 10rpx;
}

.container .content .descript {
  font-size: 30rpx;
  background-color: #fff;
  margin-top: 10rpx;
  padding: 20rpx;
}

.container .content .specifications {
  font-size: 30rpx;
  background-color: #fff;
  margin-top: 10rpx;
  padding: 20rpx;
}

.container .content .details {
  
  background-color: #fff;
  margin-top: 10rpx;
  border-radius: 4px;
  padding: 20rpx 0;
  text-align: center;
}

.collection {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  font-family: '黑体';
  border-radius: 0;
}

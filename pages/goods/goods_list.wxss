/* pages/goods/goods_list.wxss */

.container {
  background-color: #fff;
}

.container .header {
  justify-content: flex-end;
  border-bottom: 1px solid #eee;
  box-shadow: 0 1rpx 2rpx 2rpx #eee;
}

.container .header .change-list {
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx;
}

.container .header .change-list image {
  width: 100%;
  height: 100%;
}

.container .block-list {
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 30rpx;
}

.container .block-list .item {
  width: 320rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.container .block-list .item .goods-img {
  width: 320rpx;
  height: 320rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.container .block-list .item .goods-title {
  padding: 10rpx 0 4rpx;
  font-size: 32rpx;
}
